@model Boolean

<div class="main-placeholder home">
    @*slider*@
    <div class="row">
        <div class="small-12 columns destaques">
            <ul class="homeslider owl-carousel owl-theme banners">
                <li ng-repeat="item in banners">
                    @*hotsite*@
                    <a ng-if="item.HotSite" href="{{item.HotSite}}" target="_blank">
                        @if (Model){ <img alt="" ng-src="{{item.ImagemMobile}}" fallback-src="~/Images/assets/unavailable-banner.png" /> }
                        else { <img alt="" ng-src="{{item.Imagem}}" fallback-src="~/Images/assets/unavailable-banner.png" /> }
                    </a>

                    @*produto*@
                    <a ng-if="!item.HotSite" ui-sref="produto({id:item.Sku.Produto.ID})">
                        @if (Model)
                        { <img alt="" ng-src="{{item.ImagemMobile}}" fallback-src="~/Images/assets/unavailable-banner.png" /> }
                        else
                        { <img alt="" ng-src="{{item.Imagem}}" fallback-src="~/Images/assets/unavailable-banner.png" /> }
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @*vitrine*@
    <div class="row">
        <div class="small-12 columns vitrine">
            <h1>Cortes em destaque</h1>

            <div class="small-12 columns">
                <section class="produto small-6 medium-4 large-3 columns float-left" ng-repeat="item in vitrine">
                    <a ui-sref="produto({id:item.Produto.ID})">
                        <header>
                            <div class="nome">{{item.Produto.SubCategoria.Descricao | limitTo:20}}</div>
                        </header>

                        <figure>
                            <div class="promocao show-for-medium">até 10% off</div>
                            @if (Model)
                            {
                                <img alt="" ng-src="{{ item.Produto.ImagemMobile }}" fallback-src="~/Images/assets/unavailable.png" />
                            }
                            else
                            {
                                <img alt="" ng-src="{{ item.Produto.Imagem  }}" fallback-src="~/Images/assets/unavailable.png" />
                            }
                        </figure>
                    </a>

                    <footer>
                        <a ui-sref="produto({id:item.Produto.ID})">
                            <div class="small-12 columns">
                                <div class="corte">
                                    <span>{{item.Produto.ProdutoTipo.Descricao | capitalize}}</span>
                                    <label ng-class="item.Produto.Marca.Descricao | lowercase">{{item.Produto.Marca.Descricao}}</label>
                                </div>

                                <div class="preco">A partir de <strong>{{item.Produto.PrecoVigente | currency:"R$ "}}</strong></div>
                            </div>
                        </a>

