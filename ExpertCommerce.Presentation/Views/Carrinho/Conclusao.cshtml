<div class="row carrinho-conclusao">
    <div class="small-12 medium-10 columns medium-centered">
        <div class="row sucesso">
            <div class="small-12 columns" ng-show="result.Gravou && !result.RetornoGateway.Erro">
                <h1>Operação realizada com sucesso</h1>
                <p>{{result.ID}} - {{result.RetornoGateway.Mensagem}}</p>
                <button onclick="Refresh()" style="color:white;" type="button" class="fd-button fd-secondary fd-large" ui-sref="cortes">Continuar comprando</button>
            </div>
        </div>

        <div class="row sucesso">
            <div class="small-12 columns"  ng-show="!result.Gravou || result.RetornoGateway.Erro">
                <h1>Problemas com a transação de pagamento</h1>
                <p>{{result.ID}} - {{result.RetornoGateway.Mensagem}}</p>
                <button style="color:white;" type="button" class="fd-button fd-primary fd-large" ui-sref="carrinho.reprocessa-pagamento({pid:result.ID})">Tentar novamente</button>
            </div>
        </div>
    </div>
</div>